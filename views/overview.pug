extends base

block content
    section.botao.container.col-md-6
        div.largura.h-100.p-5.bg-body-tertiary.rounded-3.border
            p Ordenar Dificuldade
            div.d-grid.gap-2.d-md-flex.justify-content-md-center
                button(type="button")#ascBt.btn.btn-outline-dark.me-md-2 Asc ↑
                button(type="button")#descBt.btn.btn-outline-dark Desc ↓
        
    div.problemas-container 
        each exercise in exercises 
             div.container.my-5
                div.p-5.bg-body-tertiary.rounded-3
                    h1.text-body-emphasis.text-center #{exercise.name}
                    p.lead.enunciado #{exercise.description}
                    - const letters = ['a)', 'b)', 'c)', 'd)', 'e)'];
                    - const difficulty = ['Fácil', 'Médio', 'Difícil'];
                    each val, index in letters
                        p.lead.alternativas= val + ' ' + exercise.alternatives[index]
                    p.lead.dific Dificuldade: #{difficulty[exercise.difficulty -1]}
                    
        